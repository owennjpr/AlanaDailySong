import SpotifyEmbed from "../components/SpotifyEmbed.astro";
---

<p class="title text-4xl font-bold tracking-wider">Alana's Song of the Day!</p>
<SpotifyEmbed />

<style>
  .title {
    font-size: 2.25rem;
    transition: transform 0.2s;
    color: black;
    background-clip: text;
  }
  .title:hover {
    background-image: linear-gradient(
      0.15turn,
      rgb(87, 50, 135),
      rgb(50, 57, 135)
    );
    transform: scale(1.2);
    color: transparent;
  }

  @media only screen and (max-width: 640px) {
    .title {
      font-size: 1.9rem;
      max-width: 250px;
      text-align: center;
      word-wrap: break-word;
    }
  }
</style>
